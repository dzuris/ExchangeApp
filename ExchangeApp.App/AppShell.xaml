<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExchangeApp.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:texts="clr-namespace:ExchangeApp.App.Resources.Texts"
    xmlns:views="clr-namespace:ExchangeApp.App.Views"
    FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{StaticResource FlyoutBackground}">

    <Shell.FlyoutHeader>
        <Label 
            Text="{x:Static texts:AppResources.AppName}" 
            FontSize="32" 
            HorizontalOptions="Center" 
            Padding="15" 
            FontAttributes="Bold" 
            TextColor="{StaticResource Secondary}" />
    </Shell.FlyoutHeader>

    <ShellContent
        Title="{x:Static texts:MainPageResources.HomeTitle}"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="{x:Static texts:TransactionPageResources.TransactionTitle}"
        ContentTemplate="{DataTemplate views:TransactionPage}"
        Route="TransactionPage"/>

    <ShellContent
        Title="{x:Static texts:DonationPageResources.DonationTitle}"
        ContentTemplate="{DataTemplate views:DonationPage}"
        Route="DonationPage"/>

    <ShellContent
        Title="{x:Static texts:SettingsPageResources.PageTitle}"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage"/>

</Shell>
