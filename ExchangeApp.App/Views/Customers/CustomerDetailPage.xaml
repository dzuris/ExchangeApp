<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:texts="clr-namespace:ExchangeApp.App.Resources.Texts"
             x:Class="ExchangeApp.App.Views.Customers.CustomerDetailPage"
             Title="{x:Static texts:CustomerResources.CustomerDetailPageTitle}"
             Style="{StaticResource ContentPageStyle}">
    <Grid
        RowDefinitions="*, Auto"
        ColumnDefinitions="*, *">
        <Grid
            Grid.ColumnSpan="2"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
            RowSpacing="15"
            ColumnDefinitions="Auto, Auto"
            ColumnSpacing="25">
            <VerticalStackLayout Style="{StaticResource VerticalStackLayoutWithSpacing}">
                <Label
                    Text="{x:Static texts:CustomerResources.PersonTypeLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.WholeNameLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.IdentificationNumberLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.BirthDateLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.AddressLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.NationalityLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.EvidenceTypeLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
                <Label
                    Text="{x:Static texts:CustomerResources.EvidenceNumberLabel}"
                    Style="{StaticResource InputLabelStyle}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" Style="{StaticResource VerticalStackLayoutWithSpacing}">
                <Label Text="Normal person"/>
                <Label Text="Joseph Customer"/>
                <Label Text="000111/9999"/>
                <Label Text="1.1.1975"/>
                <Label Text="Random address 615, New Jersey, Random State, Long address"/>
                <Label Text="Slovak"/>
                <Label Text="Identification card"/>
                <Label Text="HH152125"/>
            </VerticalStackLayout>
        </Grid>
        <ImageButton
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="End"
            Source="print.png"
            Style="{StaticResource IconStyle}"/>
    </Grid>
</ContentPage>