<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:texts="clr-namespace:ExchangeApp.App.Resources.Texts"
             x:Class="ExchangeApp.App.Views.CustomerDetailPage"
             Title="{x:Static texts:CustomerDetailPageResources.CustomerDetailTitle}"
             Style="{StaticResource ContentPageStyle}">
    <Grid
        RowDefinitions="*, Auto"
        ColumnDefinitions="*, *">
        <Grid
            Grid.ColumnSpan="2"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
            RowSpacing="15"
            ColumnDefinitions="Auto, Auto"
            ColumnSpacing="25">
            <Label
                Text="{x:Static texts:CustomerDetailPageResources.PersonTypeLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Column="1"
                Text="Normal person"/>
            <Label
                Grid.Row="1"
                Text="{x:Static texts:CustomerDetailPageResources.CustomerNameLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="Joseph Customer"/>
            <Label
                Grid.Row="2"
                Text="{x:Static texts:CustomerDetailPageResources.IdentificationNumberLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="000111/9999"/>
            <Label
                Grid.Row="3"
                Text="{x:Static texts:CustomerDetailPageResources.BirthDateLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Text="1.1.1975"/>
            <Label
                Grid.Row="4"
                Text="{x:Static texts:CustomerDetailPageResources.AddressLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Text="Random address 615, New Jersey, Random State, Long address"/>
            <Label
                Grid.Row="5"
                Text="{x:Static texts:CustomerDetailPageResources.NationalityLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="5"
                Grid.Column="1"
                Text="Slovak"/>
            <Label
                Grid.Row="6"
                Text="{x:Static texts:CustomerDetailPageResources.IdentificationCardTypeLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="6"
                Grid.Column="1"
                Text="Identification card"/>
            <Label
                Grid.Row="7"
                Text="{x:Static texts:CustomerDetailPageResources.IdentificationCardNumberLabel}"
                Style="{StaticResource InputLabelStyle}"/>
            <Label
                Grid.Row="7"
                Grid.Column="1"
                Text="HH152125"/>
        </Grid>
        <ImageButton
            Grid.Row="1"
            HorizontalOptions="Start"
            Source="arrow_back.png"
            Style="{StaticResource IconStyle}"/>
        <ImageButton
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="End"
            Source="print.png"
            Style="{StaticResource IconStyle}"/>
    </Grid>
</ContentPage>